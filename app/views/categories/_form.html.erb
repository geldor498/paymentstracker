<%= form_with model: @category,  local: true do |form| %>
  <% if @category.errors.any? %>
    <h2> Errors </h2>
    <ul>
      <% @category.errors.full_messages.each  do |msg| %>
        <li><%= msg %> </li>
      <% end %>
    </ul>
  <% end %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
 
  <p>
    <%= form.label :type %><br>
    <%= form.select(:ctype, options_for_select(['Expences','Income'])) %>

  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
