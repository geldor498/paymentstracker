<h1>Payments</h1>

<%= link_to 'New', new_payment_path, {class:"btn btn-primary"} %>


<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Name</th>
      <th scope="col">Type</th>
      <th scope="col">Date</th>
      <th scope="col">Link</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @payments.each do |payment| %>
    <tr>
      <td><%= payment.id %></td>
      <td><%= payment.name %></td>
      <td><%= payment.ptype %></td>
      <td><%= payment.created_at %></td>
      <td><%= link_to 'View', payment_path(payment), {class:"btn btn-outline-primary"} %></td>
      <td><%= link_to 'Edit', edit_payment_path(payment), {class:"btn btn-outline-primary"} %></td>
      <td><%= link_to 'Destroy',
              payment_path(payment),
              method: :delete,
              class:"btn btn-outline-danger",
              data: { confirm: 'Are you sure?' }  %></td>
    </tr>
    <% end %>
   </tbody>
</table>
